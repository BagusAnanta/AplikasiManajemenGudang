<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AplikasiManajemenGudang"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AplikasiManajemenGudang">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeleteDataBarangActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_data_barang"
            android:theme="@style/Theme.AplikasiManajemenGudang" />
        <activity
            android:name=".UpdateDataBarangActivity"
            android:exported="false"
            android:label="@string/title_activity_update_data_barang"
            android:theme="@style/Theme.AplikasiManajemenGudang" />
        <activity
            android:name=".ReadDataBarangActivity"
            android:exported="false"
            android:label="@string/title_activity_read_data_barang"
            android:theme="@style/Theme.AplikasiManajemenGudang" />
        <activity
            android:name=".CreateDataBarangActivity"
            android:exported="false"
            android:label="@string/title_activity_create_data_barang"
            android:theme="@style/Theme.AplikasiManajemenGudang" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AplikasiManajemenGudang"/>
    </application>

</manifest>